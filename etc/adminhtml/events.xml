<?xml version="1.0"?>
<!--
    Admin-area events for Rollpix_ConfigurableGallery.
    Triggers automatic propagation on configurable product save (PRD ยง6.3).
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <event name="catalog_product_save_after">
        <observer name="rollpix_cg_auto_propagation"
                  instance="Rollpix\ConfigurableGallery\Observer\ProductSaveAfterObserver"/>
    </event>
</config>
